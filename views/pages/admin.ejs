<%layout("partials/template")%>
    <link rel="stylesheet" href="stylesheets/pages/admin/admin.css">
    <section class="contactData wrapper">
        <div class="section">
            <%contactData.forEach(data=> {%>
                <div class="container">
                    <h3 class="name"><%-data.fullName%></h3>
                    <p class="info"><%-data.email%></p>
                    <p class="info"><%-data.message%></p>
                </div>
                <%})%>
        </div>
    </section>
    <section class="main wrapper">
        <section class="section">
            <h2 class="title">Add New Projects</h2>
            <form class="form newProject" action="/projects" method="POST">
                <label for="projectName">Project Name</label>
                <input class="inputs" type="text" name="name" id="projectName" required>
                <label for="projectDescription">Description</label>
                <textarea name="description" id="projectDescription" required></textarea>
                <label for="projectImage">Image Link</label>
                <input class="inputs" type="text" name="image" id="projectImage" required>
                <label for="projectLink">Project Link</label>
                <input class="inputs" type="text" name="link" id="projectLink" required>
                <button class="btn">Submit</button>
            </form>
        </section>
        <section class="section">
            <h2 class="title">Add New Skill</h2>
            <form class="form newSkill" action="/about" method="POST">
                <label for="skillName">Skill Name</label>
                <input class="inputs" type="text" name="name" id="skillName" required>
                <label for="skillDescription">Description</label>
                <textarea name="description" id="skillDescription" required></textarea>
                <label for="skillPercentage">Progress Percentage</label>
                <input class="inputs" type="number" name="percentage" id="skillPercentage" min="0" max="100" required>
                <button class="btn">Submit</button>
            </form>
        </section>
        <section class="section">
            <h2 class="title">Edit Project</h2>
            <h3>Choose a Project</h3>
            <div class="projectSelection"></div>
            <form class="form edit" action="/projects?_method=PUT" method="POST">
                <input type="text" name="_Id" id="projectId" required>
                <label for="PName">Project Name</label>
                <input class="inputs" type="text" name="name" id="PName" required>
                <label for="PDescription">Description</label>
                <textarea name="description" id="PDescription" required></textarea>
                <label for="PImage">Image Link</label>
                <input class="inputs" type="text" name="image" id="PImage" required>
                <label for="PLink">Project Link</label>
                <input class="inputs" type="text" name="link" id="PLink" required>
                <button class="btn">Submit</button>
            </form>
            <form class="form" action="/projects?_method=DELETE" method="POST">
                <input type="text" name="_Id" id="project-delete-Id" required>
                <button class="delete-btn">Delete</button>
            </form>
        </section>
        <section class="section">
            <h2 class="title">Edit Skill</h2>
            <h3>Choose a skill</h3>
            <div class="skillSelection"></div>
            <form class="form edit" action="/about?_method=PUT" method="POST">
                <input type="text" name="_Id" id="skillId" required>
                <label for="SName">Skill Name</label>
                <input class="inputs" type="text" name="name" id="SName" required>
                <label for="SDescription">Description</label>
                <textarea name="description" id="SDescription" required></textarea>
                <label for="SPercentage">Progress Percentage</label>
                <input class="inputs" type="number" name="percentage" id="SPercentage" min="0" max="100" required>
                <button class="btn">Submit</button>
            </form>
            <form class="form" action="/about?_method=DELETE" method="POST">
                <input type="text" name="_Id" id="skill-delete-Id" required>
                <button class="delete-btn">Delete</button>
            </form>
        </section>

    </section>


    <script src="scripts/component/project-edit.js"></script>
    <script src="scripts/component/skill-edit.js"></script>